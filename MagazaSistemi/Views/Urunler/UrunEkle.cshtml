<style>
    input {
        margin-bottom: 10px;
    }
</style>
<form method="post" enctype="multipart/form-data" asp-controller="Urunler" asp-action="UrunEkle">
    <div class="row">
        <div class="col-2">
            <label>Ürün Adı : </label>
        </div>
        <div class="col-4">
            <input type="text" name="UrunAd" class="form-control" placeholder="Ürün Adı Giriniz..." maxlength="20" required>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <label>Ürün Fiyatı : </label>
        </div>
        <div class="col-4">
            <input type="number" name="UrunFiyat" class="form-control" placeholder="Ürün Fiyatı Giriniz..." required>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-4">
            <div class=" form-group">
                <button type="submit" class=" btn btn-success">EKLE</button>
            </div>
        </div>
    </div>
</form>
