 @model List<MagazaModel> 
 <center>
<table class=" table-bordered">

    <thead>
    
    <tr >
        
        <th style="padding:30px 30px 30px" scope="col"> Id </th>
        <th style="padding:30px 30px 30px" scope="col"> Mağaza Adı </th>
        <th style="padding:30px 30px 30px" scope="col">  </th>
        <th style="padding:30px 30px 30px" scope="col">  </th>
       
    </tr>
    </thead>
    <tbody>
    @foreach (var item in @Model)
    {
        <tr>
            <form method="post" asp-controller="Magaza" asp-action="MagazaSil">

            <td style="padding: 30px 30px 30px" > @item.Id</td>
            <td style="padding:30px 30px 30px" > @item.MagazaAd</td>
            <td style="padding:30px 30px 30px"><button class="btn btn-danger" asp-controller="Magaza" asp-action="MagazaSil" asp-route-Id="@item.Id"> <i class="fa-solid fa-trash-can"></i></button></td>

            </form>
            <td style="padding:30px 30px 30px"  > <a class="btn btn-success" asp-controller="Magaza" asp-action="MagazaGuncelle" asp-route-Id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a></td>

        </tr>
       

    }
     </tbody>
  
</table>
</center>