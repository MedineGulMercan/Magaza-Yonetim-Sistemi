@model MagazaModel
<style>
    input{
        margin-bottom:10px;
    }
</style>
<form method="post" enctype="multipart/form-data" asp-controller="Magaza" asp-action="MagazaGuncelle">

    <div class="row">
        <div class="col-2">
            <label> Id : </label>
        </div>
        <div class="col-4">
            <input type="text" name="Id" class="form-control" value="@Model.Id " maxlength="20" disabled>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <label>Mağaza Ad : </label>
        </div>
        <div class="col-4">
            <input type="text" name="MagazaAd" class="form-control" value="@Model.MagazaAd" placeholder="Mağaza Adını Giriniz..." maxlength="20" required>
        </div>
    </div>


     <div class="row">
        <div class="col-2">
        </div>
        <div class="col-4">
            <div class=" form-group">
                <button type="submit" class=" btn btn-success">GÜNCELLE</button>
            </div>
        </div>
    </div>
</form>